<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_action_bar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/bg_top"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="3dp"
            android:src="@drawable/ic_back"
            android:visibility="invisible" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_user_ico"
            android:layout_width="25dp"
            android:layout_height="25dp"
            fresco:roundAsCircle="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxEms="6"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_action_right_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@drawable/ic_white_notification"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_action_right_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:padding="3dp"
            android:src="@drawable/ic_search"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_action_right_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="7dp"
            android:padding="3dp"
            android:src="@drawable/ic_white_share"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>