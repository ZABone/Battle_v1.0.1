<?xml version="1.0" encoding="utf-8"?>
<!--下载管理界面弹出的删除对话框-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:text="温馨提示"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_tishi_infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D000"
            android:layout_marginTop="25dp"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="28dp"
            android:text="删除安装包后将无法恢复,确认删除?"/>
        <!--<CheckBox-->
            <!--android:id="@+id/cb_ischecked"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="同时删除源文件"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:textColor="#A000"-->
            <!--android:textSize="15sp"-->
            <!--android:translationX="-5dp"-->
            <!--android:checked="true"-->
            <!--/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:background="#3000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_delete_no"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textColor="#A000"
                android:textSize="17sp"
                android:gravity="center"
                android:text="取消"/>
            <View
                android:layout_width="0.9dp"
                android:layout_height="45dp"
                android:background="#3000"/>

            <TextView
                android:id="@+id/tv_delete_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:gravity="center"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
