<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_step_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_find_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:text="@string/reset_password"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_find_hints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingMultiplier="1.2"
        android:lines="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/reset_password_hints"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLineSeparator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_find_mark"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/login_key" />


        <EditText
            android:id="@+id/edt_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_show_password"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_eye_close"
            android:visibility="invisible" />

    </LinearLayout>

    <View
        android:id="@+id/edt_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorLineSeparator"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/login_key" />

        <EditText
            android:id="@+id/edt_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:hint="@string/input_again"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_show_confirm_password"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:padding="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_eye_close"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>