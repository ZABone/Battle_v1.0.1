<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/about_us_mipmap_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            fresco:actualImageScaleType="centerCrop" />

        <View
            android:id="@+id/vertical_line"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/about_us_mipmap_img"
            android:background="#ebebeb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/about_us_mipmap_img"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/vertical_line"
            android:lineSpacingMultiplier="1.8"
            android:text="@string/app_remark"
            android:textColor="@color/colorTxtTitle"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#ebebeb" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--微信公招-->
            <TextView
                android:id="@+id/about_us_wx_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="3"
                android:paddingLeft="15dp"
                android:textColor="@color/colorTxtSub"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#ebebeb" />
            <!--官方qq群-->
            <TextView
                android:id="@+id/about_us_qqqun_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="3"
                android:paddingLeft="15dp"
                android:textColor="@color/colorTxtSub"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/about_us_phone_net_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="3"
                android:paddingLeft="15dp"
                android:textColor="@color/colorTxtSub"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/about_us_pc_net_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="3"
                android:paddingLeft="15dp"
                android:textColor="@color/colorTxtSub"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/about_us_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="3"
                android:paddingLeft="15dp"
                android:textColor="@color/colorTxtSub"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="#ebebeb" />

            <TextView
                android:id="@+id/about_us_introduce_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.3"
                android:lines="3"
                android:paddingLeft="15dp"
                android:paddingTop="2dp"
                android:textColor="@color/colorTxtSub"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="网侠科技 版权所有"
            android:textColor="@color/colorTxtTitle"
            android:textSize="12.5sp" />
    </RelativeLayout>
</LinearLayout>
