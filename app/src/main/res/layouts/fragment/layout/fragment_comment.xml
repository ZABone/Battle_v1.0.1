<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_gravity="bottom"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pg_send_rate"
        style="@style/AccentColorProgressBarHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:progress="0" />

    <EditText
        android:id="@+id/edt_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="top"
        android:hint="忍着不说多难受..."
        android:lines="4"
        android:maxLength="140"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/colorTxtTitle"
        android:textColorHint="@color/colorTxtSub"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_select_pic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/edt_input"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_photo"
        android:tint="@color/colorHalfGlass"
        android:tintMode="multiply"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_at_person"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/iv_select_pic"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_select_pic"
        android:padding="2dp"
        android:src="@drawable/ic_at"
        android:tint="@color/colorHalfGlass"
        android:tintMode="multiply"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_send"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edt_input"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_send"
        android:tint="@color/colorTxtSub"
        android:tintMode="multiply" />

</RelativeLayout>