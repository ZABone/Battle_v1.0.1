<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:layout_collapseMode="pin">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_user_ico"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:failureImage="@drawable/ic_user_icon_error"
                fresco:placeholderImage="@drawable/ic_user_icon_empty" />

            <TextView
                android:id="@+id/tv_user_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_user_ico"
                android:text="@string/enter_now"
                android:textColor="@color/colorTxtTitle"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_user_nick"
                android:layout_below="@id/tv_user_nick"
                android:layout_marginTop="3dp"
                android:text="@string/enter_hints"
                android:textColor="@color/colorTxtSub"
                android:textSize="12sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/colorLineSeparator" />

            <LinearLayout
                android:id="@+id/ll_local_game"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_local_game" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/local_games"
                    android:textColor="@color/colorTxtTitle" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:rotation="90"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_indicator" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorLineSeparator" />

            <LinearLayout
                android:id="@+id/ll_browsing_history"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_mine_record" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/browsing_history"
                    android:textColor="@color/colorTxtTitle" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:rotation="90"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_indicator" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorLineSeparator" />

            <LinearLayout
                android:id="@+id/ll_my_favorite"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_mine_collect" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/my_favorite"
                    android:textColor="@color/colorTxtTitle" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:rotation="90"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_indicator" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:background="@color/colorLineSeparator" />

            <LinearLayout
                android:id="@+id/ll_set"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_mine_feedback" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="@string/set"
                    android:textColor="@color/colorTxtTitle" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:rotation="90"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_indicator" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>